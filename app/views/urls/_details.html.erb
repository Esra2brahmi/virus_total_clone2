<div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
  <!-- Left Column -->
  <div class="space-y-4">
    <div>
      <p class="text-gray-400">URL</p>
      <p class="text-white break-all"><%= @result.dig("attributes", "url") %></p>
    </div>

    <div>
      <p class="text-gray-400">Status</p>
      <p class="text-white"><%= @result.dig("attributes", "status") || "N/A" %></p>
    </div>

    <div>
      <p class="text-gray-400">Content Type</p>
      <p class="text-white"><%= @result.dig("attributes", "last_http_response_content_type") || "N/A" %></p>
    </div>

    <div>
      <p class="text-gray-400">Last Analysis</p>
      <p class="text-white">
        <%= Time.at(@result.dig("attributes", "last_analysis_date")).strftime("%b %d, %Y %H:%M") rescue "N/A" %>
      </p>
    </div>
  </div>

  <!-- Right Column -->
  <div class="space-y-4">
    <div>
      <p class="text-gray-400">Categories</p>
      <div class="flex flex-wrap gap-2 mt-1">
        <% @result.dig("attributes", "categories")&.each do |engine, category| %>
          <span class="px-2 py-1 bg-[#394568] rounded text-xs text-white"><%= category %></span>
        <% end %>
      </div>
    </div>

    <div>
      <p class="text-gray-400">HTTP Response</p>
      <p class="text-white"><%= @result.dig("attributes", "last_http_response_code") || "N/A" %></p>
    </div>

    <div>
      <p class="text-gray-400">HTML Meta</p>
      <div class="bg-[#2a2938] p-3 rounded max-h-40 overflow-y-auto">
        <pre class="text-xs text-gray-300"><%= JSON.pretty_generate(@result.dig("attributes", "meta") || {}) %></pre>
      </div>
    </div>
  </div>
</div>